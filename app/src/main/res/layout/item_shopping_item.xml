<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <CheckBox
        android:id="@+id/itemCheckBox"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:buttonTint="@color/checkbox_color" />

    <LinearLayout
        android:id="@+id/itemNameContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="x3" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="@color/text_primary"
            android:textDirection="locale"
            android:textSize="16sp"
            tools:text="@string/enter_item_name" />

    </LinearLayout>

    <ImageView
        android:id="@+id/itemImageMini"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/content_description_item_image_preview"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/itemLinkButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/content_description_item_link"
        android:src="@drawable/ic_link"
        app:tint="@color/text_secondary"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/quantityEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/increaseQuantityButton"
            android:layout_width="28dp"
            android:layout_height="9dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/content_description_increase_quantity"
            android:padding="2dp"
            android:src="@drawable/ic_arrow_drop_up"
            app:tint="@color/text_secondary" />

        <TextView
            android:id="@+id/quantityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:text="1" />

        <ImageButton
            android:id="@+id/decreaseQuantityButton"
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/content_description_decrease_quantity"
            android:padding="2dp"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@color/text_secondary" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/itemDetailsButton"
        android:layout_width="14dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/content_description_item_details"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/text_secondary" />

    <ImageButton
        android:id="@+id/itemMoveButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/content_description_move_item"
        android:src="@drawable/ic_move"
        app:tint="@color/text_secondary" />

    <ImageButton
        android:id="@+id/itemEditButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/content_description_edit_item"
        android:src="@drawable/ic_edit"
        app:tint="@color/text_secondary" />

    <ImageButton
        android:id="@+id/itemDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/content_description_delete_item"
        android:src="@drawable/ic_delete"
        app:tint="@color/text_secondary" />

</LinearLayout>