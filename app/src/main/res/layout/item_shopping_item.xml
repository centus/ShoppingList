<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <CheckBox
        android:id="@+id/itemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:buttonTint="@color/checkbox_color" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textDirection="locale"
        android:gravity="start|center_vertical"
        tools:text="@string/enter_item_name" />

    <TextView
        android:id="@+id/itemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        tools:text="x3" />

    <LinearLayout
        android:id="@+id/quantityEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/decreaseQuantityButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@color/text_secondary"
            android:contentDescription="@string/content_description_decrease_quantity"/>

        <TextView
            android:id="@+id/quantityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:text="1" />

        <ImageButton
            android:id="@+id/increaseQuantityButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_drop_up"
            app:tint="@color/text_secondary"
            android:contentDescription="@string/content_description_increase_quantity"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/itemMoveButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_move"
        android:contentDescription="@string/content_description_move_item"
        app:tint="@color/text_secondary" />

    <ImageButton
        android:id="@+id/itemEditButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/content_description_edit_item"
        app:tint="@color/text_secondary" />

    <ImageButton
        android:id="@+id/itemDeleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/content_description_delete_item"
        app:tint="@color/text_secondary" />

</LinearLayout>